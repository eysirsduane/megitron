{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/apps/backend/main.go"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Vue Debugger",
            "url": "http://localhost:9527",
            "webRoot": "${workspaceFolder}/apps/frontadmin"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "TS Debugger",
            "runtimeExecutable": "tsx",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/apps/frontadmin/node_modules/**"
            ],
            "program": "${file}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ],
    "compounds": [
        {
            "name": "Start Both (Frontend & Backend)",
            "configurations": [
                "Launch Package",
                "Vue Debugger",
                "TS Debugger"
            ]
        }
    ]
}